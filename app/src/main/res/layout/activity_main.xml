<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="2dp"

        android:padding="5px"
        android:text="Tên bài hát "
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <ImageButton
        android:background="@null"
        android:id="@+id/imBtNext"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_skip_next" />

    <ImageButton
        android:id="@+id/imBtPre"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="296dp"
        android:layout_marginBottom="10dp"
        android:background="@null"
        android:src="@drawable/ic_skip_previous" />

    <ImageButton
        android:id="@+id/imBtStop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="10dp"
        android:background="@null"
        android:src="@drawable/ic_stop" />

    <ImageButton
        android:id="@+id/imBtPlay"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="208dp"
        android:layout_marginBottom="10dp"
        android:background="@null"
        android:src="@drawable/ic_play" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_above="@+id/imBtNext"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="65dp" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seekBar"
        android:layout_alignStart="@+id/seekBar"
        android:layout_alignParentTop="true"
        android:layout_marginTop="380dp"
        android:text="00:00"
        android:textColor="#ffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvTimeTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/seekBar"
        android:layout_alignLeft="@+id/seekBar"
        android:layout_alignParentTop="true"
        android:layout_marginStart="298dp"
        android:layout_marginLeft="298dp"
        android:layout_marginTop="380dp"
        android:text="00:00"
        android:textColor="#ffff"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignEnd="@+id/tvTimeTotal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="10dp"
        app:srcCompat="@drawable/dvd" />


</RelativeLayout>